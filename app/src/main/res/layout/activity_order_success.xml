<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <ImageView
    android:id="@+id/successImage" android:src="@drawable/ic_success"
    android:layout_width="150dp"
    android:layout_height="150dp"
    android:contentDescription="@string/order_success_description" />

    <TextView
        android:id="@+id/successTitle"
        android:layout_marginTop="24dp"
        android:text="@string/order_success_description"
        android:textSize="24sp"
        android:textColor="#4CAF50"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/successMessage"
        android:layout_marginTop="12dp"
        android:text="@string/order_success_thanks"
        android:textSize="16sp"
        android:textColor="#444444"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/btnBackHome"
        android:layout_marginTop="32dp"
        android:text="@string/order_success_home_btn"
        android:backgroundTint="#4CAF50"
        android:textColor="#FFFFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</LinearLayout>
